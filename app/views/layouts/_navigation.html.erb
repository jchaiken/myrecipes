<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to "myRecipes", root_path, class: "btn btn-lg btn-success", id: "logo" %>
    <!-- only show new recipe button if user is logged in   -->
    <% if logged_in? %>
      <div class="nav_item">
        <%= link_to "New Recipe", new_recipe_path, class: "btn btn-default btn-warning" %>
      </div>
      <% else %>
      <div class="nav_item">
        <%= link_to "Log in", login_path, class: "btn btn-default btn-warning" %>
      </div>
    <% end %>
    <div class="nav_item">
      <%= link_to "link 2", "", class: "btn btn-default btn-warning" %>
    </div>
    <div class="nav_item">
      <%= link_to "logout", logout_path, class: "btn btn-default btn-danger" %>
    </div>
  </div>
</header>